{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API + Front-End",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net9.0/PdfWebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7040;http://localhost:5090"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/index.html"
            }
        }
    ]
}